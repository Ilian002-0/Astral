{
  "name": "Atlas - Trading Dashboard",
  "short_name": "Atlas",
  "description": "Atlas helps you visualize your trading history. Upload your trade report to see an interactive dashboard.",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#0c0b1e",
  "theme_color": "#0c0b1e",
  "categories": ["finance", "productivity", "utilities"],
  "icons": [
    {
      "src": "/logo.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/logo.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Atlas Dashboard"
    },
    {
      "src": "/logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "form_factor": "narrow",
      "label": "Atlas Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View trading dashboard",
      "url": "/?view=dashboard",
      "icons": [
        { "src": "/dashboard-icon.svg", "sizes": "96x96", "type": "image/svg+xml" }
      ]
    },
    {
      "name": "List of Trades",
      "short_name": "Trades",
      "description": "View all trades",
      "url": "/?view=trades",
      "icons": [
        { "src": "/list-icon.svg", "sizes": "96x96", "type": "image/svg+xml" }
      ]
    },
    {
      "name": "Calendar",
      "short_name": "Calendar",
      "description": "View trades on a calendar",
      "url": "/?view=calendar",
      "icons": [
        { "src": "/calendar-icon.svg", "sizes": "96x96", "type": "image/svg+xml" }
      ]
    },
    {
      "name": "Goals",
      "short_name": "Goals",
      "description": "View trading goals",
      "url": "/?view=goals",
      "icons": [
        { "src": "/goals-icon.svg", "sizes": "96x96", "type": "image/svg+xml" }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "widgets": [
    {
      "name": "Atlas Goal Progress",
      "short_name": "Goal",
      "description": "Track your main trading goal progress.",
      "tag": "goal-progress-widget",
      "template": "goal-widget-template",
      "data": "/widget-goal-data.json",
      "icons": [{ "src": "/logo.svg", "sizes": "any", "type": "image/svg+xml" }]
    }
  ],
  "window_controls_overlay": {
    "display_override": [
      "window-controls-overlay"
    ]
  }
}